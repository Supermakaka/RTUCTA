@model WebSite.ViewModels.Shared.CreateEditCompanyViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title" id="myModalLabel">Delete Confirmation</h4>
</div>
<div class="modal-body">
    <p>Are you sure you want to delete the company "@Model.Name"?</p>
</div>
<div class="modal-footer text-right">
    <button type="submit" class="btn btn-primary" data-company-id-to-delete="@Model.ID" id="btn-company-delete">Yes</button>
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
</div>