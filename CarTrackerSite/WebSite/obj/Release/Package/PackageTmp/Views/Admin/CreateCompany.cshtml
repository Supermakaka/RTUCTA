@model WebSite.ViewModels.Shared.CreateEditCompanyViewModel

@{
    ViewBag.Title = "CreateCompany";
}

<form>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Create New Company</h4>
    </div>
    <div class="modal-body">
        @Html.ValidationSummary()
        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="modal-footer text-right">
        <button type="button" class="btn btn-primary" id="btn-company-submit">Save</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>
</form>