@if (Request.IsAuthenticated)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-user"></i> @User.Identity.Name <span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
            <li><a href="@Url.Action("LogOff", "Auth")"><i class="glyphicon glyphicon-log-out"></i> Log Off</a></li>
        </ul>
    </li>
}
else
{
    <li><a href="@Url.Action("LogIn", "Auth")"><i class="glyphicon glyphicon-log-in"></i> Log In</a></li>
}