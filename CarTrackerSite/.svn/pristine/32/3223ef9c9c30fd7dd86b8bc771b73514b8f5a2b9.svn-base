.btn,
.form-control
{
    border-radius: 2px;
}

.form-control
{
    box-shadow: none;
}

.breadcrumb {
    padding: 0;
    background: none;
    margin: 10px 0 0 0;
}

.site-title
{
    font-size: xx-large;
}

.site-title:hover
{
    text-decoration: none;    
}

.page-header {
    margin-top: 20px;
}

.page-header-with-actions:before,
.page-header-with-actions:after {
    display: table;
    content: " ";
}

.page-header-with-actions:after {
    clear: both;
}

.page-header-with-actions h1 {
    margin-top: 0;
}

.page-header-with-actions .actions
{
    margin-top: 5px;
}

.validation-summary-errors
{
    padding: 15px;
    margin: 10px 0 20px 0;
    border-radius: 2px;
    background-color: #FCF2F2;
    border: 1px solid #eed3d7;
    color: #a94442;
}

.validation-summary-errors .close
{
	position: relative;
	top: -2px;
	right: -21px;
	line-height: 18px;
}

.validation-summary-errors ul
{
    margin: 0;
    padding: 0;
}

.validation-summary-errors li
{
    list-style: none;
}